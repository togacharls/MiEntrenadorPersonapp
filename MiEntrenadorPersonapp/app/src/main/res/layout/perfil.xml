<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondodegradado"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="70dp"  >
        
        	<TextView
        	android:id="@+id/textoNombrePerfil"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/nombre"
        	android:layout_marginTop="15dp"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/nombre"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:text=""
        	android:gravity="right"
        	android:layout_alignParentRight="true" 
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_alignBaseline="@+id/textoNombrePerfil"
        	android:layout_toRightOf="@+id/textoNombrePerfil"
        	android:textSize="14sp"/>
    
        	<TextView
        	android:id="@+id/textoEdadPerfil"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/fechanacimiento"
        	android:layout_marginTop="15dp"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_below="@+id/textoNombrePerfil"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/edad"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:text=""
        	android:gravity="right"
        	android:layout_alignParentRight="true"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_alignBaseline="@+id/textoEdadPerfil"
        	android:layout_toRightOf="@+id/textoEdadPerfil"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/textoSexoPerfil"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"  
        	android:text="@string/sexo"
        	android:layout_marginTop="15dp"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_below="@+id/textoEdadPerfil"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/sexo"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"      
        	android:text=""
        	android:gravity="right"
        	android:layout_alignParentRight="true"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_alignBaseline="@+id/textoSexoPerfil"
        	android:layout_toRightOf="@+id/textoSexoPerfil"
        	android:textSize="14sp"/>
    
        	<TextView
        	android:id="@+id/textoAlturaPerfil"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:text="@string/altura"
        	android:layout_marginTop="15dp"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_below="@+id/textoSexoPerfil"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/altura"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:text=""
        	android:gravity="right"
        	android:layout_alignParentRight="true"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_alignBaseline="@+id/textoAlturaPerfil"
        	android:layout_toRightOf="@+id/textoAlturaPerfil"
        	android:textSize="14sp"/>
    
        	<TextView
        	android:id="@+id/textoPesoPerfil"    
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:text="@string/peso"
        	android:layout_marginTop="15dp"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_below="@+id/textoAlturaPerfil"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/peso"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"  
        	android:text=""
        	android:gravity="right"
        	android:layout_alignParentRight="true"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_alignBaseline="@+id/textoPesoPerfil"
        	android:layout_toRightOf="@+id/textoPesoPerfil"
        	android:textSize="14sp"/>
    
        	
        	<TextView
        	android:id="@+id/textoCorreoPerfil"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"       
        	android:text="@string/email"
        	android:layout_marginTop="15dp"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_below="@+id/textoPesoPerfil"
        	android:textSize="14sp"/>
        	
        	<TextView
        	android:id="@+id/correoElectronico"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"   
        	android:text=""
        	android:gravity="right"
        	android:layout_alignParentRight="true"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	android:textColor="#000000"
        	android:layout_alignBaseline="@+id/textoCorreoPerfil"
        	android:layout_toRightOf="@+id/textoCorreoPerfil"
        	android:textSize="14sp"/>
  		<LinearLayout
  		    android:orientation="vertical"
  		    android:layout_width="match_parent"
  		    android:layout_height="match_parent"
  		    android:layout_below="@+id/textoCorreoPerfil"
  		    android:layout_alignParentBottom="true"
  		    android:gravity="bottom">
  		    
      	<Button
          	android:id="@+id/modificarPerfil"
          	android:layout_width="match_parent"
          	android:layout_height="wrap_content"
          	android:text="@string/modificar"
			android:layout_marginTop="20dp"
			android:textColor="#FFFFFF"
			android:background="@drawable/fondobotonfinal"
       	  	android:textSize="14sp"/>
      
      	<Button
          	android:id="@+id/calcimc"
          	android:layout_width="match_parent"
          	android:layout_height="wrap_content"
          	android:text="@string/imc"
          	android:layout_marginTop="10dp"
			android:textColor="#FFFFFF"
			android:background="@drawable/fondobotonfinal"
       	  	android:textSize="14sp"/>
      	</LinearLayout>
          
</RelativeLayout>