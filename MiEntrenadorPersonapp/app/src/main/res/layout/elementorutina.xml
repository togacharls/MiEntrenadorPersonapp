<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    	   
		<ImageView
		    android:id="@+id/elementorutinafoto" 
			android:contentDescription="@string/fotoej"
			android:layout_marginTop="15dp"
			android:layout_marginLeft="15dp"
        	android:layout_width="150dp"
        	android:layout_height="150dp"
        	android:scaleType="fitXY"/>
		 <LinearLayout 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:orientation="vertical"
		     android:layout_marginTop="15dp"
			 android:layout_marginLeft="15dp"
			 android:layout_marginRight="15dp">  	
	   		<TextView
    			android:id ="@+id/elementorutinaseries"
    			android:layout_width = "wrap_content"
    			android:layout_height="wrap_content" 
    			android:textColor="#000000"
    			android:textSize="14sp"
    			android:text="@string/serieser"/>
   	
	   	
	   		<TextView
    			android:id ="@+id/elementorutinarepeticiones"
    			android:layout_marginTop="15dp"
    			android:layout_width = "wrap_content"
    			android:layout_height="wrap_content" 
    			android:textColor="#000000"
    			android:textSize="14sp"
    			android:text="@string/repeticioneser"/>	   	
    			
	   		<TextView
    			android:id ="@+id/elementorutinadescansoseries"
    			android:layout_marginTop="15dp"
    			android:layout_width = "wrap_content"
    			android:layout_height="wrap_content" 
    			android:textColor="#000000"
    			android:textSize="14sp"
    			android:text="@string/repeticioneser"/>	 	
    			
	   		<TextView
    			android:id ="@+id/elementorutinadescansofin"
    			android:layout_marginTop="15dp"
    			android:layout_width = "wrap_content"
    			android:layout_height="wrap_content" 
    			android:textColor="#000000"
    			android:textSize="14sp"
    			android:text="@string/repeticioneser"/>	 	   				
		</LinearLayout> 
</LinearLayout>
